@model SimpleNewsSystem.Models.NewsItem

<h2>Editar Notícia</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label asp-for="title">Título</label>
        <input asp-for="title" class="form-control" style="max-width: 450px;"/>
        <span asp-validation-for="title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="description">Descrição</label>
        <textarea asp-for="description" class="form-control" style="max-width: 450px;"></textarea>
        <span asp-validation-for="description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="image_url">URL da Imagem</label>
        <input asp-for="image_url" class="form-control" style="max-width: 450px;"/>
        <span asp-validation-for="image_url" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Salvar</button>
</form>
