@model SimpleNewsSystem.Models.User

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="email">Email</label>
        <input asp-for="email" class="form-control" style="max-width: 450px;"/>
        <span asp-validation-for="email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="password">Senha</label>
        <input asp-for="password" type="password" class="form-control" style="max-width: 450px;"/>
        <span asp-validation-for="password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Register</button>
</form>
